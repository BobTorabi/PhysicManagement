@model List<PhysicManagement.Model.PhysicTreatment>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header card-header-info">
                    <h4 class="card-title">لیست درمان فیزیکی</h4>                    
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-hover">
                        <thead class="text-warning">
                            <tr>
                                <th>ردیف</th>
                                <th>شناسه پرونده پزشکی</th>
                                <th>شماره فاز</th>
                                <th>روز ثبت</th>
                                <th>کاربر</th>
                                <th>نقشه درمان فیزیکی</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int Index = 1;
                                foreach (var physicTreatment in Model)
                                {
                                    <tr>
                                        <td>@Index</td>
                                        <td>@physicTreatment.MedicalRecordId</td>
                                        <td>@physicTreatment.PhaseNumber</td>
                                        <td>@physicTreatment.ActionDate</td>
                                        <td>@physicTreatment.ActionUser</td>
                                        <td>@physicTreatment.PhysicTreatmentPlan</td>
                                    </tr>
                                    Index++;
                                }

                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

