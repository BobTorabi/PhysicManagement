@model List<PhysicManagement.Model.PhysicTreatment>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header card-header-info">
                    <h4 class="card-title">لیست درمان فیزیکی</h4>
                    <h3>
                        <a class="btn btn-sm bg-light text-dark" href="Modify">افزودن جدید</a>
                    </h3>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-hover">
                        <thead class="text-warning">
                            <tr>
                                <th>ردیف</th>
                                <th>شناسه پرونده پزشکی</th>
                                <th>شماره فاز</th>
                                <th>روز ثبت</th>
                                <th>کاربر</th>
                                <th style="width:50px;">امکانات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int Index = 1;
                                foreach (var physicTreatment in Model)
                                {
                                                        <tr>
                                                            <td>@Index</td>
                                                            <td>@physicTreatment.MedicalRecordId</td>
                                                            <td>@physicTreatment.PhaseNumber</td>
                                                            <td>@physicTreatment.ActionDate</td>
                                                            <td>@physicTreatment.ActionUser</td>
                                                            <td>
                                                                <div class="btn-group">
                                                                    <button type="button" class="btn btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                        امکانات
                                                                    </button>
                                                                    <div class="dropdown-menu dropdown-menu-left">
                                                                        <a class="dropdown-item" href="@Url.Action("Modify","PhysicTreatment",new { @id = @physicTreatment.Id})">ویرایش</a>
                                                                        <div class="dropdown-divider"></div>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                    Index++;
                                }

                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

