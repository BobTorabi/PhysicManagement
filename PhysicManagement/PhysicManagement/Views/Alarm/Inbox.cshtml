@model IEnumerable<PhysicManagement.Model.Alarm>

@{
    ViewBag.Title = "کارتابل من";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">
                    پیام های مراحل پذیرش و کانتورینگ
                </h4>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="text-warning">
                    <th>ردیف</th>
                    <th>پیام</th>
                    <th>تاریخ ارسال</th>
                    <th>بیمار</th>
                    <th></th>
                    </thead>
                    <tbody>

                        @{
                            int index = 1;
                            foreach (var item in Model.Where(x => x.TreatmentProcessId <= 2))
                            {
                                <tr>
                                    <td>
                                        @index
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @Html.DisplayForDateTime(item.SendDate)
                                    </td>
                                    <td>
                                        @item.PatientFullName
                                    </td>
                                    <td><a href="#" class="btn btn-info pull-left">مشاهده</a></td>
                                </tr>
                                    index++;
                                }
                            }
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">
                    پیام های مراحل تجویز درمان و پلنینگ
                </h4>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="text-warning">
                    <th>ردیف</th>
                    <th>پیام</th>
                    <th>تاریخ ارسال</th>
                    <th>بیمار</th>
                    <th></th>
                    </thead>
                    <tbody>

                        @{
                            int index2 = 1;
                            foreach (var item in Model.Where(x => x.TreatmentProcessId > 2))
                            {
                                <tr>
                                    <td>
                                        @index2
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @Html.DisplayForDateTime(item.SendDate)
                                    </td>
                                    <td>
                                        @item.PatientFullName
                                    </td>
                                    <td><a href="#" class="btn btn-info pull-left">مشاهده</a></td>
                                </tr>
                                index2++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
