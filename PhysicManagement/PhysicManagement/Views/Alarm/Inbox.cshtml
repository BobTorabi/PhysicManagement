@model IEnumerable<PhysicManagement.Model.Alarm>

@{
    ViewBag.Title = "کارتابل من";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">
                    پیام های مراحل پذیرش و کانتورینگ
                </h4>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="text-warning">
                    <th>ردیف</th>
                    <th>پیام</th>
                    <th>تاریخ ارسال</th>
                    <th>بیمار</th>
                    <th></th>
                    </thead>
                    <tbody>

                        @{
                            int index = 1;
                            foreach (var item in Model.Where(x => x.TreatmentProcessId <= 2))
                            {
                                <tr>
                                    <td>
                                        @index
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @Html.DisplayForDateTime(item.SendDate)
                                    </td>
                                    <td>
                                        @item.PatientFullName
                                    </td>
                                    <td><a href="#" class="btn btn-info pull-left">مشاهده</a></td>
                                </tr>
                                index++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">
                    پیام های مراحل تجویز درمان و پلنینگ
                </h4>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="text-warning">
                    <th>ردیف</th>
                    <th>پیام</th>
                    <th>تاریخ ارسال</th>
                    <th>بیمار</th>
                    <th></th>
                    </thead>
                    <tbody>
                        @{
                            int index2 = 1;
                            foreach (var item in Model.Where(x => x.TreatmentProcessId > 2))
                            {
                                <tr data-id="@item.Id">
                                    <td>
                                        @index2
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @Html.DisplayForDateTime(item.SendDate)
                                    </td>
                                    <td>
                                        @item.PatientFullName
                                    </td>
                                    <td><a href="#" onclick="getData(@item.Id)" class="btn btn-info pull-left">مشاهده</a></td>
                                </tr>
                                index2++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">لیست ارگان ها</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="form-group doctor_desc">
                    <textarea placeholder="متن" readonly class="form-control" rows="5" id="des"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

<script>
    function getData(id) {
        $.post('SetAlarmAsRead', { id: id }, function (json) {
            if (json["Data"] == true) {
                $('tr[data-id="' + id + '"]').fadeOut(200, function () { $(this).remove() });
            }
            else {
                alert(json['Messages'][0]);
            }
        })
    }
</script>