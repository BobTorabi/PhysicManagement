@model IEnumerable<PhysicManagement.Model.Alarm>

@{
    ViewBag.Title = "کارتابل من";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">
                    پیام های مراحل پذیرش و کانتورینگ
                </h4>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="text-warning">
                        <tr>
                            <th>ردیف</th>
                            <th>پیام</th>
                            <th>تاریخ ارسال</th>
                            <th>بیمار</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            int index = 1;
                            foreach (var item in Model.Where(x => x.TreatmentProcessId <= 2))
                            {
                                <tr>
                                    <td>
                                        @index
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @Html.DisplayForDateTime(item.SendDate)
                                    </td>
                                    <td>
                                        @item.PatientFullName
                                    </td>
                                    <td>
                                        <div class="togglebutton">
                                            <label>
                                                <input class="chkRead" type="checkbox" alarmid="@item.Id" onchange="setAsRead(@item.Id)" />
                                                <span class="toggle"></span>
                                            </label>
                                        </div>

                                    </td>
                                </tr>
                                index++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">
                    پیام های مراحل تجویز درمان و پلنینگ
                </h4>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="text-warning">
                        <tr>
                            <th>ردیف</th>
                            <th>پیام</th>
                            <th>تاریخ ارسال</th>
                            <th>بیمار</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index2 = 1;
                            foreach (var item in Model.Where(x => x.TreatmentProcessId > 2))
                            {
                                <tr data-id="@item.Id">
                                    <td>
                                        @index2
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @Html.DisplayForDateTime(item.SendDate)
                                    </td>
                                    <td>
                                        @item.PatientFullName
                                    </td>
                                    <td>
                                        <div class="togglebutton">
                                            <label>
                                                <input class="chkRead" type="checkbox" alarmid="@item.Id" onchange="setAsRead(@item.Id)" />
                                                <span class="toggle"></span>
                                            </label>
                                        </div>
                                       
                                    </td>
                                </tr>
                                index2++;
                            }
                        }
                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {

        $('.chkRead').change(function () {
            if ($(this).is(':checked')) {
                var alarmId = $(this).attr('alarmid');
                setAsRead(alarmId);
            }            
        });

        function setAsRead(alarmId) {
            var alarmArray = new Array();
            alarmArray.push(alarmId);
            alert(JSON.stringify(alarmArray));
            $.ajax({
                type: "POST",
                url: "/Alarm/SetAlarmAsRead",
                contentType: "application/json; charset=utf-8",
                dataType: 'JSON',
                data: JSON.stringify(alarmArray),
                traditional: true
            });
            alert('بروزرسانی با موفقیت انجام شد');
        }
    });
</script>

