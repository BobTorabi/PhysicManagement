@model List<PhysicManagement.Model.TreatmentDevice>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">لیست دستگاه های درمانی</h4>
                <h3>
                    <a class="btn btn-sm bg-light text-dark" href="Modify">افزودن جدید</a>
                </h3>
            </div>
            <div class="card-body table-responsive">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-warning">
                        <p>@TempData["Error"]</p>
                    </div>
                }
                <table class="table table-hover">
                    <thead class="text-warning">
                        <tr>
                            <th>ردیف</th>
                            <th>عنوان</th>
                            <th>عنوان انگلیسی</th>
                            <th>توضیحات </th>
                            <th>کد</th>
                            <th style="width:50px;">امکانات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int Index = 1;
                            foreach (var treatmentDevice in Model)
                            {
                                <tr>
                                    <td>@Index</td>
                                    <td>@treatmentDevice.Title</td>
                                    <td>@treatmentDevice.EnglishTitle</td>
                                    <td>@treatmentDevice.Description</td>
                                    <td>@treatmentDevice.Code</td>
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                امکانات
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-left">
                                                <a class="dropdown-item" href="@Url.Action("Modify","TreatmentDevice",new { @id = @treatmentDevice.Id})">ویرایش</a>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item" data-toggle="modal" data-target="#DeleteModal" onclick="DeleteEntity('حذف','@Url.Action("Delete","TreatmentDevice", new { id = treatmentDevice.Id })')">حذف</a>
                                            </div>
                                                @*<a class="dropdown-item" href="Modify/@treatmentDevice.Id">حذف</a>
                                        <div class="dropdown-divider"></div>*@
                                            
                                        </div>
                                    </td>
                                </tr>
                                Index++;
                            }

                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

