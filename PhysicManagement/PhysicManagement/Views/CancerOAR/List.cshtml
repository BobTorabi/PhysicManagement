@model IEnumerable<PhysicManagement.Model.CancerOAR>

@{
    ViewBag.Title = "";
}
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">حدود دز مجاز بافت های سالم </h4>
                <h3>
                    <a class="btn btn-sm bg-light text-dark" href="~/CancerOAR/Modify">افزودن جدید</a>
                </h3>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover">
                    <thead class="text-warning">
                        <tr>
                            <th>ردیف</th>
                            <th>نام سرطان</th>
                            <th>نام ارگان</th>
                            <th>Tolerance</th>
                            <th>توضیحات</th>
                            <th style="width:50px;">امکانات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int Index = 1;
                            foreach (var CancerOAR in Model)
                            {
                                <tr>
                                    <td>@Index</td>
                                    <td>@CancerOAR.Cancer.Title</td>
                                    <td>@CancerOAR.OrganTitle</td>
                                    <td>@CancerOAR.Tolerance</td>
                                    <td>@CancerOAR.Description</td>
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                امکانات
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-left">
                                                <a class="dropdown-item" href="@Url.Action("Modify","CancerOAR",new { @id = @CancerOAR.Id})">ویرایش</a>
                                                @*<div class="dropdown-divider"></div>
                                                <a class="dropdown-item" href="~/CancerOAR/DeleteCancerOAR/@CancerOAR.Id"> حذف</a>*@
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                Index++;
                            }

                        }


                    </tbody>
                </table>
            </div>
        </div>
        <div class="card cancerOAR">
            <div class="card-header card-header-rose card-header-icon">
                <div class="card-icon">
                    <i class="material-icons">add_box</i>
                </div>
                <h4 class="card-title">لیست ارگان ها</h4>
            </div>
            <div class="card-body">

                <table class="table table-hover">
                    <thead class="text-warning">
                        <tr>
                            <th>هدف</th>
                            <th></th>
                            <th>در خطر</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>ارگان شماره یک</td>
                            <td>
                                <div class="togglebutton">
                                    <label>
                                        <input type="checkbox">
                                        <span class="toggle"></span>
                                    </label>
                                </div>
                            </td>
                            <td>ارگان شماره یک</td>
                            <td>
                                <div class="togglebutton">
                                    <label>
                                        <input type="checkbox">
                                        <span class="toggle"></span>
                                    </label>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script>
    $('.cancerOAR').hide();
</script>