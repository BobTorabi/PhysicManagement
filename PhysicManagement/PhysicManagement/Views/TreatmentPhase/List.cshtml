@model List<PhysicManagement.Model.TreatmentPhase>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header card-header-info">
                    <h4 class="card-title">لیست فاز درمانی</h4>                    
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-hover">
                        <thead class="text-warning">
                            <tr>
                                <th>ردیف</th>
                                <th>شناسه پرونده پزشکی</th>
                                <th>فاز</th>
                                <th>عنوان فاز</th>
                                <th>دز</th>
                                <th>فرکشن/Fraction</th>
                                <th>هدف/Target</th>
                                <th>توضیحات</th>
                                <th>تاریخ</th>
                                <th>کاربر</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int Index = 1;
                                foreach (var treatmentPhase in Model)
                                {
                                    <tr>
                                        <td>@Index</td>
                                        <td>@treatmentPhase.MedicalRecordId</td>
                                        <td>@treatmentPhase.PhaseNumber</td>
                                        <td>@treatmentPhase.PhaseText</td>
                                        <td>@treatmentPhase.Dose</td>
                                        <td>@treatmentPhase.Fraction</td>
                                        <td>@treatmentPhase.Target</td>
                                        <td>@treatmentPhase.Description</td>
                                        <td>@treatmentPhase.PrescribeDate</td>
                                        <td>@treatmentPhase.PrescribesdUser</td>
                                    </tr>
                                    Index++;
                                }

                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

