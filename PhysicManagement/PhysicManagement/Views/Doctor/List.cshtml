@model List<PhysicManagement.Model.Doctor>
@{
    ViewBag.Title = "List";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">لیست دکترها</h4>
                <p class="card-category">
                     فقط دکترهای فعال در لیست نمایش داده شده است
                </p>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover">
                    <thead class="text-warning">
                        <tr>
                            <th>ردیف</th>
                            <th>نام کاربری </th>
                            <th>نام</th>
                            <th>نام خانوادگی</th>
                            <th>تخصص</th>
                            <th>اقدام مورد نیاز</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int Index = 1;
                            foreach (var doctor in Model)
                            {
                                <tr>
                                    <td>@Index</td>
                                    <td>@doctor.Username</td>
                                    <td>@doctor.FirstName</td>
                                    <td>@doctor.LastName</td>
                                    <td>@doctor.Degree</td>
                                    <td>در حال تصویر برداری می باشد</td>
                                </tr>
                                Index++;
                            }

                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>