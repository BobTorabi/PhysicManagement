@model List<PhysicManagement.Model.TreatmentProcess>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header card-header-info">
                    <h4 class="card-title">لیست پیشروی درمان</h4>                    
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-hover">
                        <thead class="text-warning">
                            <tr>
                                <th>ردیف</th>
                                <th>شماره مرحله</th>
                                <th>عنوان</th>
                                <th>عنوان انگلیسی</th>
                                <th>توضیحات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int Index = 1;
                                foreach (var treatmentProcess in Model)
                                {
                                    <tr>
                                        <td>@Index</td>
                                        <td>@treatmentProcess.StepNumber</td>
                                        <td>@treatmentProcess.Title</td>
                                        <td>@treatmentProcess.EnglishTitle</td>
                                        <td>@treatmentProcess.Description</td>
                                    </tr>
                                    Index++;
                                }

                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

