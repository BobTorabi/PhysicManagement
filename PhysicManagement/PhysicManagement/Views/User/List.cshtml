@model List<PhysicManagement.Model.User>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header card-header-info">
                    <h4 class="card-title">لیست پرسنل سی تی اسکن</h4>
                    <h3>
                        <a class="btn btn-sm bg-light text-dark" href="Modify">افزودن جدید</a>
                    </h3>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-hover">
                        <thead class="text-warning">
                            <tr>
                                <th>ردیف</th>
                                <th>نام</th>
                                <th>نام خانوادگی</th>
                                <th>موبایل</th>
                                <th>نام کاربری</th>
                                <th>تاریخ ثبت</th>
                                <th style="width:50px;">امکانات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int Index = 1;
                                foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@Index</td>
                                        <td>@user.FirstName</td>
                                        <td>@user.LastName</td>
                                        <td>@user.Mobile</td>
                                        <td>@user.Username</td>
                                        <td>@Html.DisplayForDateTime(user.RegisterDate)</td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    امکانات
                                                </button>
                                                <div class="dropdown-menu dropdown-menu-left">
                                                    <a class="dropdown-item" href="@Url.Action("Modify","User",new { @id = @user.Id})">ویرایش</a>
                                                    <div class="dropdown-divider"></div>
                                                    <a class="dropdown-item" data-toggle="modal" data-target="#DeleteModal" onclick="DeleteEntity('حذف','@Url.Action("Delete","User", new { id = user.Id })')">حذف</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    Index++;
                                }

                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
