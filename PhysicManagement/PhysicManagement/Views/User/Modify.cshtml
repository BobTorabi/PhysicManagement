@model PhysicManagement.Model.User

@{
        if (Model.Id == 0)
    {
        ViewBag.Title = "ثبت پرسنل سی تی اسکن جدید";
    }
    else
    {
        ViewBag.Title = "ویرایش اطلاعات پرسنل سی تی اسکن  ";
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-rose card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">mail_outline</i>
                    </div>
                    <h4 class="card-title">اطلاعات نمایشی پرسنل سی تی اسکن</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="FirstName" class="bmd-label-floating">نام </label>
                                    <input type="text" id="FirstName" name="FirstName" value="@Model.FirstName" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="LastName" class="bmd-label-floating">نام خانوادگی</label>
                                    <input type="text" id="LastName" name="LastName" value="@Model.LastName" class="form-control">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="Username" class="bmd-label-floating">نام کاربری</label>
                                    <input type="text" id="Username" name="Username" value="@Model.Username" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="Mobile" class="bmd-label-floating">موبایل </label>
                                    <input type="text" id="Mobile" name="Mobile" value="@Model.Mobile" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="Code" class="bmd-label-floating">رمز عبور</label>
                                    <input type="text" id="Code" name="Code" value="@Model.Password" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.EditorPersianDatePicker(model => model.RegisterDate, "ناریخ ثبت")
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" name="IsSupervisor" @(Model.IsSupervisor.GetValueOrDefault() ? "checked" : "") value="@Model.IsSupervisor"> IsSupervisor
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-rose pull-right">ثبت تغییرات</button>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>


